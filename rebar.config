%% -*- erlang -*-

{require_otp_vsn, "R15|R16|17"}.

{erl_opts, [fail_on_warning,
            debug_info,
            warn_untyped_record]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{cover_print_enabled, false}.
{edoc_opts, [{dialyzer_specs, all}, {report_missing_type, true},                  
             {report_type_mismatch, true}, {pretty_print, erl_pp},
             {preprocess, true}]}.
{validate_app_modules, true}.
{clean_files, ["ebin/*.beam", ".eunit/*", ".qc/*", "test/*.beam"]}.

{deps, [
        {msgpack, "0.*",
         {git, "git://github.com/msgpack/msgpack-erlang", {tag, "0.2.7"}}},
        {meck, ".*",
         {git, "git://github.com/eproxus/meck", {tag, "0.8.2"}}}
       ]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
